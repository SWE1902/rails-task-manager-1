<h1><%= @task.title %></h1>

<h3><%= @task.details %></h3>
<h4><%= @task.completed %></h4>

<li><%= link_to "Edit this task", tasks_edit_path(@task) %></li>
<%= link_to "Delete", task_path(@task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<li><%= link_to "Tasks", "/tasks" %></li>
